<div id="top-search">
  <p>”絶対にハズさない'</p>
  <p>'美味しいお店を検索できる </p>
  <%= search_form_for @p, url: cooks_search_path do |f| %>
    <%= f.label :place_name_eq, '沖縄県' %>
    <%= f.collection_select :name_eq, @places, :name, :name, include_blank: '那覇市' %>
    <%= f.submit '検 索' %>
  <% end %>

  <% if user_signed_in? %>
     <%= form_with url: new_cook_path, local: true do |f| %>
       <%= f.submit "DBの登録", class: "sel-btn" %>

      <% end %>
  <% end %>

</div>


