        <div class="nav">
          <div class="nav__left">
           phileoaaaaa   
          </div>
          
            <div class="nav__right">
              <ul>
               <% if user_signed_in? %>
                <li><%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: :nav__btn  %></li>
