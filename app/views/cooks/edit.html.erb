<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">phileo編集</h2>
      <%# 部分テンプレートでフォームを表示する %>
       <%= form_with model: @cook, local: true do |f| %>
        <%= render partial: "form", locals: { cook: @cook, f: f } %>
        <%= f.submit "更新する", class: "sell-btn" %>
      <% end %>  
    </div>
  </div>
</div>


 <div class="weight-bold-text">
    <div class="avatar">
      <%= image_tag "avatar.JPG", class: "avatar" %>
    </div>
    <div class="cook__body">
      <div class="cook__detail">
        <p class="detail__title"></p>
        <p class="detail__message"><%= @cook.store %></p>
      </div>
    </div>

     <%= @cook.title %>
    <div class="wrapper">
      <div class="store_main">
        <p><%= @cook.store %></p>
      </div><!-- /.store_main -->

    <div class="title_main">
        <p><%= @cook.title %></p>
      </div><!-- /.title_main -->

      <div class="cooksentence_main">
        <p><%= @cook.cooksentence %></p>
      </div><!-- /.cooksentence_main -->

      <div class="side-bar_store">
        <p><%= @cook.address %></p>
        <p><%= @cook.phone_number %></p>
        <p><%= @cook.open_day %></p>
        <p><%= @cook.holiday_day %></p>
        <p><%= @cook.regular_holiday %></p>
      </div><!-- /.side-bar_store -->
    </div><!-- /.wrapper -->
  </div>
</div>